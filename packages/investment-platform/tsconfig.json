{
    "compilerOptions": {
        "target": "ES2020", // Depending on Node.js version, ES2020 is usually a good target
        "module": "CommonJS", // Node.js uses CommonJS
        "strict": true, // Enables strict type checking
        "esModuleInterop": true, // Enables default imports from modules with no default export
        "skipLibCheck": true, // Skips type checking of declaration files
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist" // Output directory for compiled files
    },
    "include": [
        "./src/**/*" // Adjust this path to where your source files are located
    ],
    "exclude": [
        "node_modules", // No need to compile node_modules
        "**/*.spec.ts" // Exclude test files
    ]
}